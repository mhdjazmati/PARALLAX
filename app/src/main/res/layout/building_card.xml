<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#ccc"
    android:id="@+id/apartment_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/apartment_photo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/building"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of the building"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="Number of floors"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/building_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My building"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/number_of_floors_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>
            <ImageView
                android:id="@+id/checked"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_done"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
